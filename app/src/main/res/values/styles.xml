<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全屏 -->
    <style name="AppTheme.NoActionBar.AlphaStatusBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 全屏透明 -->
    <style name="AppTheme.NoActionBar.AlphaStatusBar.Translucent" parent="AppTheme.NoActionBar.AlphaStatusBar">
        <item name="android:windowBackground">@drawable/ic_launcher</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
